{
    "manifest_version": 2,
  
    "name": "Download Peeker Plug In",
    "description": "View file downloads before downloading them!",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab"
     ],
     "content_scripts": [
        {
          "matches": ["http://*/*"],
          "css": ["core.css"],
          "js": ["core.js"],
          "run_at": "document_end",
          "all_frames": true
        }
      ]
  }